<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"

        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/detailtool"
        android:layout_alignParentLeft="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/p_image"
                android:layout_width="305dp"
                android:layout_height="340dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="1dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/p_name"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"


                    android:fontFamily="@font/gotham_book"

                    android:gravity="center"

                    android:hint="Product Name"

                    android:textColor="#063249"

                    android:textSize="20dp" />

                <TextView


                    android:id="@+id/p_aval"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/p_name"
                    android:layout_weight="1"

                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"

                    android:hint="Availability"
                    android:paddingTop="10dp"
                    android:textColor="#063249"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true" />




            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/p_disc"
        android:layout_width="419dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/p_name"
        android:layout_below="@+id/p_name"
        android:layout_marginTop="5dp"

        android:layout_weight="1"

        android:fontFamily="@font/gotham_book"

        android:gravity="center"


        android:hint="Description"
        android:textColor="#063249"
        android:textSize="18dp"
        android:layout_alignLeft="@+id/p_name" />

</LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="185dp"
                        android:layout_height="35dp"

                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
android:layout_weight="1"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:text="Size"
                        android:layout_marginTop="5dp"
                        android:textColor="#063249"
                        android:layout_marginLeft="10dp"/>


                    <Spinner
                        android:id="@+id/spinner_size"
                        android:layout_width="185dp"



                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/border"

                        android:layout_marginRight="10dp"
                        android:textColor="#063249"
                        android:layout_alignParentRight="true">>

                    </Spinner>
                </LinearLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="3dp"
    android:id="@+id/linearLayout2">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
android:layout_marginLeft="10dp"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="Color"
                    android:textColor="#063249"
                    android:layout_alignParentLeft="true" />

                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:paddingLeft="10dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#063249"

                    android:layout_marginRight="10dp"
                    android:background="@drawable/border"
                    android:layout_toEndOf="@+id/textView"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/textView" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qty"
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textColor="#063249"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true" />

                <EditText
                    android:id="@+id/pedit"
                    android:layout_width="185dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_below="@+id/linearLayout2"
                    android:layout_toEndOf="@+id/qty"
                    android:background="@drawable/border1"
                    android:paddingLeft="10dp"
                    android:hint="1"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"
                    android:inputType="number"

                    android:text="1"
                    android:layout_toRightOf="@+id/qty" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="185dp"

                    android:layout_height="35dp"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:text="Original Price"
                    android:textColor="#063249"
                    android:textColorHint="#FFFF5656"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="185dp"
                    android:layout_height="35dp"


                    android:background="@drawable/border1"

                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"


                    android:text="Price"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_alignParentRight="true" />

            </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:orientation="horizontal">



    <TextView
        android:id="@+id/textView7"
        android:layout_width="185dp"

        android:layout_height="35dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:fontFamily="@font/gotham_book"
        android:gravity="center"
        android:text="Discount"
        android:layout_marginLeft="10dp"
        android:textColor="#063249"
        android:textStyle="bold"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/dprice"
        android:layout_width="185dp"
        android:layout_height="35dp"

        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        android:background="@drawable/border1"
        android:paddingLeft="9dp"
        android:layout_marginRight="10dp"

        android:fontFamily="@font/gotham_book"

        android:hint="N/A"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_alignParentRight="true" />

</LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/pbtn"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="92dp"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:background="@drawable/border1"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="ADD TO CART"
                    android:textColor="#ffff"
                    android:layout_marginLeft="85dp"
                    android:layout_alignParentLeft="true" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>