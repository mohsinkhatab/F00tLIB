<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include


            layout="@layout/toolbar"
            android:id="@+id/casualtool"/>
    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:background="@color/black"-->
    <!--android:layout_height="1dp"/>-->>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"


                android:layout_marginTop="5dp"
                android:background="@drawable/border"

                android:gravity="center"
                android:text="Casual"
                android:textAllCaps="true"
                android:textColor="#063249"

                android:textSize="24sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/casualmen"
                android:layout_width="match_parent"
                android:layout_height="220dp"

                android:layout_marginTop="15dp"

                android:scaleType="centerCrop"
                android:src="@drawable/casualmen" />

            <ImageView
                android:id="@+id/casualwomen"
                android:layout_width="match_parent"
                android:layout_height="200dp"


                android:layout_marginTop="10dp"

                android:scaleType="centerCrop"
                android:src="@drawable/casualwomen" />

            <include layout="@layout/footer"
                android:layout_marginTop="20dp"
               />
        </LinearLayout>
    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/whatsapp"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginBottom="60dp"
        android:layout_marginEnd="302dp"

        android:background="#fff"
        android:backgroundTint="#fff"
        android:src="@drawable/whatsaaap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb"
        android:layout_width="50dp"
        android:layout_height="50dp"


        android:layout_marginBottom="55dp"
        android:layout_marginStart="302dp"
        android:background="#fff"
        android:backgroundTint="#fff"
        android:src="@drawable/faceeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="RtlCompat" />
</android.support.constraint.ConstraintLayout>